<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009900"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jardosh.intentexample.Apple">

    <TextView
        android:id="@+id/appleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp"
        android:text="@string/appleText"
        android:textColor="#FFF"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/applesInput"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" android:inputType=""/>

    <Button
        android:id="@+id/appleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="onClick"
        android:text="@string/baconButton" />
</android.widget.RelativeLayout>
